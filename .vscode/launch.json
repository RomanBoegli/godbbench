{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "description": "set",
            "id": "set",
            "options": ["set1", "set2", "set3"],
            "type":"pickString"
        }, 
        {
            "description": "multiplicity",
            "id": "iter",
            "default": "100",
            "options": ["100", "500", "1000", "10000", "100000"],
            "type":"pickString"
        }
      ],
    "configurations": [
        {
            "name": "launch mysql",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/main.go",
            "args": ["mysql"
                    , "--host", "127.0.0.1"
                    , "--port", "3306"
                    , "--user", "root"
                    , "--pass", "password"
                    , "--iter", "${input:iter}"
                    , "--threads", "15"
                    //, "--run", "inserts selects updates"
                    , "--nosetup"
                    //, "--nocleanstart"
                    , "--keep"
                    , "--script", "${workspaceFolder}/scripts/${input:set}/mysql.sql"
                    , "--writecsv", "${workspaceFolder}/tmp/results-${input:set}/result_${input:set}_mysql_${input:iter}.csv"
                ],
            "internalConsole": true
        },
        {
            "name": "launch postgres",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/main.go",
            "args": ["postgres"
                    , "--host", "127.0.0.1"
                    , "--port", "5432"
                    , "--user", "postgres"
                    , "--pass", "password"
                    , "--iter", "${input:iter}"
                    , "--threads", "15"
                    //, "--run", "inserts selects updates"
                    , "--nosetup"
                    //, "--nocleanstart"
                    , "--keep"
                    , "--script", "${workspaceFolder}/scripts/${input:set}/postgres.sql"
                    , "--writecsv", "${workspaceFolder}/tmp/results-${input:set}/result_${input:set}_postgres_${input:iter}.csv"
                ],
            "internalConsole": true
        },
        {
            "name": "launch neo4j",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/main.go",
            "args": ["neo4j"
                    , "--host", "127.0.0.1"
                    , "--port", "7687"
                    , "--user", "neo4j"
                    , "--pass", "password"
                    , "--iter", "${input:iter}"
                    , "--threads", "15"
                    //, "--run", "inserts selects updates"
                    , "--nosetup"
                    //, "--nocleanstart"
                    , "--keep"
                    , "--script", "${workspaceFolder}/scripts/${input:set}/neo4j.cql"
                    , "--writecsv", "${workspaceFolder}/tmp/results-${input:set}/result_${input:set}_neo4j_${input:iter}.csv"
                ],
            "internalConsole": true 
        },
        {
            "name": "mergecsv",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/main.go",
            "args": ["mergecsv"
                    , "--rootDir","${workspaceFolder}/tmp/results-${input:set}/"
                    , "--targetFile","${workspaceFolder}/tmp/results-${input:set}/merged.csv"
                ],
            "internalConsole": true
        },
        {
            "name": "createcharts",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/main.go",
            "args": ["createcharts"
                    , "--dataFile","${workspaceFolder}/tmp/results-${input:set}/merged.csv"
                    , "--charttype","line"
            ],
            "internalConsole": true
        }
    ]
}