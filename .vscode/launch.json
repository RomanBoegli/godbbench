{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "description": "set",
            "id": "set",
            "options": ["employees", "merchant"],
            "type":"pickString"
        }, 
        {
            "description": "multiplicity",
            "id": "iter",
            "default": "100",
            "options": ["10", "100", "1000", "10000", "100000", "1000000"],
            "type":"pickString"
        }, 
        {
            "description": "threads",
            "id": "threads",
            "default": "15",
            "type":"promptString"
        }
      ],
    "configurations": [
        {
            "name": "mysql (script)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/godbbench.go",
            "args": ["mysql"
                    , "--host", "127.0.0.1"
                    , "--port", "3306"
                    , "--user", "root"
                    , "--pass", "password"
                    , "--iter", "${input:iter}"
                    , "--threads", "${input:threads}"
                    , "--keep", "true"
                    , "--script", "${workspaceFolder}/scripts/${input:set}/mysql.sql"
                    , "--writecsv", "${workspaceFolder}/tmp/results-${input:set}/result_${input:set}_mysql_${input:iter}.csv"
                ],
            "internalConsole": true
        },
        {
            "name": "mysql (synthetic)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/godbbench.go",
            "args": ["mysql"
                    , "--host", "127.0.0.1"
                    , "--port", "3306"
                    , "--user", "root"
                    , "--pass", "password"
                    , "--iter", "${input:iter}"
                    , "--threads", "${input:threads}"
                ],
            "internalConsole": true
        },
        {
            "name": "postgres (script)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/godbbench.go",
            "args": ["postgres"
                    , "--host", "127.0.0.1"
                    , "--port", "5432"
                    , "--user", "postgres"
                    , "--pass", "password"
                    , "--iter", "${input:iter}"
                    , "--threads", "${input:threads}"
                    , "--keep", "true"
                    , "--script", "${workspaceFolder}/scripts/${input:set}/postgres.sql"
                    , "--writecsv", "${workspaceFolder}/tmp/results-${input:set}/result_${input:set}_postgres_${input:iter}.csv"
                ],
            "internalConsole": true
        },
        {
            "name": "postgres (synthetic)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/godbbench.go",
            "args": ["postgres"
                    , "--host", "127.0.0.1"
                    , "--port", "5432"
                    , "--user", "postgres"
                    , "--pass", "password"
                    , "--iter", "${input:iter}"
                    , "--threads", "${input:threads}"
                ],
            "internalConsole": true 
        },
        {
            "name": "neo4j (script)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/godbbench.go",
            "args": ["neo4j"
                    , "--host", "127.0.0.1"
                    , "--port", "7687"
                    , "--user", "neo4j"
                    , "--pass", "password"
                    , "--iter", "${input:iter}"
                    , "--threads", "${input:threads}"
                    , "--keep", "true"
                    , "--script", "${workspaceFolder}/scripts/${input:set}/neo4j.cql"
                    , "--writecsv", "${workspaceFolder}/tmp/results-${input:set}/result_${input:set}_neo4j_${input:iter}.csv"
                ],
            "internalConsole": true 
        },
        {
            "name": "neo4j (synthetic)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/godbbench.go",
            "args": ["neo4j"
                    , "--host", "127.0.0.1"
                    , "--port", "7687"
                    , "--user", "neo4j"
                    , "--pass", "password"
                    , "--iter", "${input:iter}"
                    , "--threads", "${input:threads}"
                ],
            "internalConsole": true 
        },
        {
            "name": "mergecsv",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/godbbench.go",
            "args": ["mergecsv"
                    , "--rootDir","${workspaceFolder}/tmp/results/${input:set}/"
                    , "--targetFile","${workspaceFolder}/tmp/results/${input:set}/merged.csv"
                ],
            "internalConsole": true
        },
        {
            "name": "createcharts",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/godbbench.go",
            "args": ["createcharts"
                    , "--dataFile","${workspaceFolder}/tmp/results/${input:set}/merged.csv"
                    , "--charttype","bar"
            ],
            "internalConsole": true
        }
    ]
}